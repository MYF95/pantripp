- provide(:title, 'All Products')

.jumbotron
  %h2 Products
  .row
    - @products.each do |product|
      .col-sm-6.col-lg-4
        .product-lists
          =link_to product_path(product) do
            =image_tag Faker::Avatar.image('product', '100x100')
          %p= link_to product.name, product_path(product), id: 'product'
          - if user_signed_in?
            %p= link_to '+ Add to a list', products_lists_path(product), class: 'btn btn-primary'
  = will_paginate