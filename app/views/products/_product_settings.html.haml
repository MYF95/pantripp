.col-xs-3.col-md-2
  = link_to '', products_path, class: 'btn glyphicon glyphicon-arrow-left go-back'
.col-xs-6.col-md-8
  %h2
    %strong #{@product.name}
.col-xs-3.col-md-2
  .list-settings
    .dropdown.btn
      %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
        .glyphicon.glyphicon-cog
      %ul.dropdown-menu.dropdown-menu-right
        - if user_signed_in?
          %li= link_to 'Edit product', edit_product_path
          %li= link_to 'Delete product', @product, method: :delete, data: { confirm: 'Are you sure?' }