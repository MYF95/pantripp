= render 'modal'

.jumbotron
  %h1 Pantripp app
  -if user_signed_in?
    %p= "Welcome back #{current_user.name}"
  - else
    .row
      .col-md-4
        %h2 Sign up for the app
        %p= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary'
      .col-md-4.col-xs-offset-4
        %h2 Login down below
        %p= link_to 'Login', login_path, class: 'btn btn-primary'

  = link_to 'Open modal', "#myModal", :class => "btn btn-primary", "data-toggle" => "modal"