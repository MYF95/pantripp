.container
  = link_to 'Pantrippu', root_path , id: 'logo'
  %nav
    %ul.nav.navbar-nav.navbar-right
      %li= link_to 'Home', root_path
      %li= link_to 'Help', help_path
      %li= link_to 'About', about_path
      %li.dropdown
        %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
          Lists
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'All lists', lists_path
          - if user_signed_in?
            %li= link_to 'My lists', user_list_path(current_user)
            %li= link_to 'New list', new_list_path
      %li.dropdown
        %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
          Products
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'All products', products_path
          - if user_signed_in?
            %li= link_to 'New product', new_product_path
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Account
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Profile', user_path(current_user)
            %li= link_to 'Settings', edit_user_registration_path
            %li.divider
            %li= link_to 'Logout', logout_path
      - else
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            New user?
            %b.caret
          %ul.dropdown-menu
            %li= link_to 'Sign up', new_user_registration_path
            %li.divider
            %li= link_to 'Log in', login_path